<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SP18.PF.Mobile.Profile">
    <ContentPage.Content>
        <StackLayout Margin="20,50,20,10">
            <StackLayout Margin="0,50,0,0">
            <Label Text="You are currently logged in!"
                   
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Log Out" 
                x:Name="btnLogOut"
                BackgroundColor="#dbdbdb" 
                TextColor="Black"
                Clicked="LogOut_Clicked"
                AbsoluteLayout.LayoutBounds="0.5, 0" 
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
            </StackLayout>
            <StackLayout Margin="0,75,0,0">
            <Label Text="To view your purchased tickets, click the button below."
                   
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Tickets" 
                x:Name="btnTickets" 
                BackgroundColor="#3897F0" 
                TextColor="White"  
                Clicked="Tickets_Clicked"/>
                </StackLayout>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>