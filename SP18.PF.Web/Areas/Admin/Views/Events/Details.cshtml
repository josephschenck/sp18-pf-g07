@using SP18.PF.Web.Areas.Admin.Models.Events
@model SP18.PF.Web.Areas.Admin.Models.Events.EventEditViewModel
@{
    ViewData["Title"] = "Event Details";
}
<h2>Event</h2>
<h4>Details</h4>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TourName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TourName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EventStart)
        </dt>
        <dd>
            @(Model.EventEnd == null ? string.Empty : Model.EventEnd.Value.ToString("M/d/yyyy h:mm tt"))
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EventEnd)
        </dt>
        <dd>
            @(Model.EventEnd == null ? string.Empty : Model.EventEnd.Value.ToString("M/d/yyyy h:mm tt"))
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TicketPrice)
        </dt>
        <dd>
            @Model.TicketPrice.ToString("C")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
