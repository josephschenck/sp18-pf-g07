@using SP18.PF.Web.Areas.Admin.Models.Events
@model SP18.PF.Web.Areas.Admin.Models.Events.EventEditViewModel
@{
    ViewData["Title"] = "Event Edit";
}
<h2>Event</h2>
<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VenueId" class="control-label"></label>
                <input asp-for="VenueName" type="text" class="form-control" readonly="readonly" />
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourId" class="control-label"></label>
                <input asp-for="TourName" type="text" class="form-control" readonly="readonly" />
                <span asp-validation-for="TourId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventStart" class="control-label"></label>
                <div class="input-group datetimeoffset">
                    <input asp-for="EventStart" type="text" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar">
                        </span>
                    </span>
                </div>
                <span asp-validation-for="EventStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventEnd" class="control-label"></label>
                <div class="input-group datetimeoffset">
                    <input asp-for="EventEnd" type="text" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar">
                        </span>
                    </span>
                </div>
                <span asp-validation-for="EventEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketPrice" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-addon">$</span>
                    <input asp-for="TicketPrice" type="number" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control" />
                </div>
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
